$(function() {
$("#nav1").hover(
function() { $(".top-score-box").css('display', 'block'); },
function() { $(".top-score-box").hide()});
$(".top-score").hover(
function() { $(".top-score-box").css('display', 'block'); },
function() { $(".top-score-box").hide()});
});

